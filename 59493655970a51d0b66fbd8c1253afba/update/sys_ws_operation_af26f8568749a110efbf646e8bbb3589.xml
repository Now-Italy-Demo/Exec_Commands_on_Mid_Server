	response.setContentType('text/html');

	var gr = new GlideRecord('u_downdetector_data');
	gr.orderByDesc('sys_created_on');
	gr.query();
	if( gr.next() ) {
		writer.writeString( '<html><head><style> img { filter: brightness(150%); height: auto; max-width: 100%;} </style></head><body><center>' + gr.getValue('u_down_graph') + '</body></html>');
		// writer.writeString( gr.getValue('u_down_indicators') );
	}
	else {
		writer.writeString('');
	}

})(request, response);]]></operation_script>
